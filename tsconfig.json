{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [ "./src/ui/*" ],
      "@/*": [ "./src/ui/*" ],
      "@@/*": [ "./*" ],
      "~~/*": [ "./*" ],
      "@domain/*": [ "./src/domain/*" ],
      "@application/*": [ "./src/application/*" ],
      "@infrastructure/*": [ "./src/infrastructure/*" ],
      "@ui/*": [ "./src/ui/*" ],
    },
    "types": [
      "jest",
      "@types/node",
      "@nuxt/types"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
